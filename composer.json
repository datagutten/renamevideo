{
    "name": "datagutten/renamevideo",
    "description": "A tool to rename dreambox recordings based on xmltv data",
    "type": "project",
    "require": {
        "ext-dom": "*",
        "ext-gd": "*",
        "ext-simplexml": "*",
        "datagutten/tools": "^1.8",
        "datagutten/tvdb": "^3.3",
        "datagutten/video-tools": "^2.1",
        "datagutten/xmltvtools": "^3.3",
        "php-ffmpeg/php-ffmpeg": ">=0.14 <1",
        "symfony/filesystem": "^4.3",
        "symfony/process": "^5.1",
        "twig/twig": "^2.12"
    },
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "datagutten",
            "email": "datagutten@datagutten.net"
        }
    ],
    "autoload": {
        "classmap": ["tvdb_utils.php"],
        "psr-4": {
            "datagutten\\renamevideo\\": "src",
            "datagutten\\renamevideo\\tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "sort-packages": true
    }
}
