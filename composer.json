    "type": "project",
    "require": {
        "ext-dom": "*",
        "ext-gd": "*",
        "ext-simplexml": "*",
        "datagutten/tools": "^1.8",
        "datagutten/video-tools": "^2.1",
        "datagutten/xmltvtools": "dev-master",
        "symfony/filesystem": "^4.3|^5|^6",
        "twig/twig": "^2.12|^3"
    },
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "datagutten",
            "email": "datagutten@datagutten.net"
        }
    ],
    "autoload": {
        "classmap": ["tvdb_utils.php"],
        "psr-4": {
            "datagutten\\renamevideo\\": "src",
            "datagutten\\renamevideo\\tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "sort-packages": true
    }
